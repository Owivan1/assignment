#include<fcntl.h>
#include<unistd.h>

int main() {
  int fd;
  char * msg = "Hello World";

  fd = open("example.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
  write(fd, msg, strlen(msg));
  close(fd);

  fd = open("example.txt", O_RDONLY);
  read(fd, msg, strlen(msg));
  printf("Content read from the file: %s\n", msg);
  close(fd);

  return 0;
}
